{
    "compilerOptions": {
        "target": "es2017",
        "jsx": "preserve",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "paths": {
            "~usecases/*": ["./usecases/*"],
            "~*": ["./src/*"]
        }
    }
}
